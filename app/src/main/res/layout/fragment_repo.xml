<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="click"
            type="com.xiaobingkj.giteer.ui.repo.RepoFragment.ProxyClick" />
    </data>
    <LinearLayout
        android:id="@+id/repo"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <cn.carbs.android.avatarimageview.library.AvatarImageView
                    android:id="@+id/avatar"
                    android:onClick="@{() -> click.toUser()}"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/margin_left"
                    android:layout_marginTop="@dimen/margin_top"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></cn.carbs.android.avatarimageview.library.AvatarImageView>

                <TextView
                    android:id="@+id/name"
                    android:textColor="@color/accent"
                    android:textSize="18sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_left"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginEnd="@dimen/margin_right"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/avatar"
                    app:layout_constraintTop_toTopOf="parent"></TextView>

                <TextView
                    android:id="@+id/desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_s_top"
                    android:layout_marginEnd="@dimen/margin_right"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@id/name"
                    app:layout_constraintTop_toBottomOf="@id/name"></TextView>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@id/name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/desc"
                    android:layout_marginTop="@dimen/margin_s_top"
                    android:layout_marginEnd="@dimen/margin_right"
                    ></TextView>
                <View
                    android:id="@+id/view_first"
                    android:background="@color/bg_back"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="@dimen/margin_top"
                    app:layout_constraintTop_toBottomOf="@id/time"
                    ></View>

                <LinearLayout
                    android:id="@+id/code"
                    android:onClick="@{() -> click.toCode()}"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/view_first">
                    <TextView
                        android:layout_marginLeft="@dimen/margin_left"
                        android:text="代码"
                        android:textSize="@dimen/primary_text_size"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></TextView>
                    <com.github.johnkil.print.PrintView
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_right"
                        app:iconText="@string/ic_keyboard_arrow_right"
                        app:iconColor="#12558C"
                        app:iconFont="fonts/material-icon-font.ttf"
                        android:layout_gravity="center_vertical"
                        app:iconSize="20dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/release"
                    android:onClick="@{() -> click.toRelease()}"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/code">
                    <TextView
                        android:layout_marginLeft="@dimen/margin_left"
                        android:text="发行版"
                        android:textSize="@dimen/primary_text_size"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></TextView>
                    <com.github.johnkil.print.PrintView
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_right"
                        app:iconText="@string/ic_keyboard_arrow_right"
                        app:iconColor="#12558C"
                        app:iconFont="fonts/material-icon-font.ttf"
                        android:layout_gravity="center_vertical"
                        app:iconSize="20dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/issue"
                    android:onClick="@{() -> click.toIssue()}"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/release">
                    <TextView
                        android:layout_marginLeft="@dimen/margin_left"
                        android:text="Issue"
                        android:textSize="@dimen/primary_text_size"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></TextView>
                    <TextView
                        android:id="@+id/issueNumber"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:textSize="@dimen/primary_text_size"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"></TextView>
                    <com.github.johnkil.print.PrintView
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_right"
                        app:iconText="@string/ic_keyboard_arrow_right"
                        app:iconColor="#12558C"
                        app:iconFont="fonts/material-icon-font.ttf"
                        android:layout_gravity="center_vertical"
                        app:iconSize="20dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/pullRequest"
                    android:onClick="@{() -> click.toPullRequest()}"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/issue">
                    <TextView
                        android:layout_marginLeft="@dimen/margin_left"
                        android:text="Pull Request"
                        android:textSize="@dimen/primary_text_size"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></TextView>
                    <com.github.johnkil.print.PrintView
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_right"
                        app:iconText="@string/ic_keyboard_arrow_right"
                        app:iconColor="#12558C"
                        app:iconFont="fonts/material-icon-font.ttf"
                        android:layout_gravity="center_vertical"
                        app:iconSize="20dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/commit"
                    android:onClick="@{() -> click.toCommit()}"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/pullRequest">
                    <TextView
                        android:layout_marginLeft="@dimen/margin_left"
                        android:text="提交"
                        android:textSize="@dimen/primary_text_size"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></TextView>
                    <com.github.johnkil.print.PrintView
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_right"
                        app:iconText="@string/ic_keyboard_arrow_right"
                        app:iconColor="#12558C"
                        app:iconFont="fonts/material-icon-font.ttf"
                        android:layout_gravity="center_vertical"
                        app:iconSize="20dp" />
                </LinearLayout>

                <View
                    android:id="@+id/view_second"
                    android:background="@color/bg_back"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    app:layout_constraintTop_toBottomOf="@id/commit"
                    ></View>

                <LinearLayout
                    android:id="@+id/branch"
                    android:onClick="@{() -> click.toBranch()}"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/view_second">
                    <TextView
                        android:layout_marginLeft="@dimen/margin_left"
                        android:text="分支"
                        android:textSize="@dimen/primary_text_size"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></TextView>
                    <com.github.johnkil.print.PrintView
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_right"
                        app:iconText="@string/ic_keyboard_arrow_right"
                        app:iconColor="#12558C"
                        app:iconFont="fonts/material-icon-font.ttf"
                        android:layout_gravity="center_vertical"
                        app:iconSize="20dp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/md"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/secondary_text_size"
                    android:layout_marginStart="@dimen/margin_left"
                    android:layout_marginEnd="@dimen/margin_right"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginBottom="@dimen/margin_bottom"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/branch"
                    app:layout_constraintVertical_bias="1.0"
                    tools:layout_editor_absoluteX="0dp"></TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </LinearLayout>
</layout>